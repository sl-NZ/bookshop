{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch and Debug",
      "program": "${workspaceFolder}/app.js",
      "runtimeExecutable": "node",
      "runtimeArgs": [
        "--inspect-brk=0.0.0.0:9229"
      ],
      "skipFiles": ["<node_internals>/**"],
      "outFiles": ["${workspaceFolder}/**/*.js"]
    }
  ]
}