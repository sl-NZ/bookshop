<!DOCTYPE html>
<html>

<head>
  <title>Checkout — Stripe Press </title>
  <script src="https://js.stripe.com/v3/"></script>
  <script src="/js/checkout.js" defer></script>
  <script>
    // Initialize Stripe with the publishable key passed from the server
    var stripe = Stripe('{{stripePublicKey}}');
  </script>
</head>

<body>
  <div class="row justify-content-md-center">
    <div class="col-6">
      <div class="text-center mt-40">
        <h1>
          Checkout — Stripe Press
        </h1>
        <h5 class="text-secondary">
          {{title}}
        </h5>
        <hr class="mt-40">
        <div class="mt-20 text-info">
          Total due: $<span class="amount" data-amount="{{amount}}"></span>
        </div>
      </div>
      <div class="card box-shadow mt-40">
        <div class="card-body">
          <div class="mt-20 text-center text-secondary">
            <form id="payment-form">
              <div class="mt-20 text-center text-secondary">
                <input type="text" class="form-control" id="name" name="name" placeholder="Your Name" required>
              </div>
              <div class="mt-20">
                <input type="email" class="form-control" id="email" name="email" placeholder="your@email.com" required>
              </div>
              <div id="payment-element" class="mt-20">
                <!--Stripe.js injects the Payment Element-->
              </div>
              <div class="mt-20">
                <button id="submit" type="submit" class="btn btn-lg btn-block btn-primary">
                  <div class="spinner hidden" id="spinner"></div>
                  <span id="button-text">Pay
                    $<span class="amount" data-amount="{{amount}}"></span>
                  </span>
                </button>
              </div>
              <div id="payment-message" class="hidden"></div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>